	@* 	<link href="~/css/style.css" rel="stylesheet"> *@
	<link href="~/Dashtrans/assets/css/style.css" rel="stylesheet">

	<link rel="stylesheet" href="~/Core/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/INCORP_domus.styles.css" asp-append-version="true" />


	@* modooffline *@
	<!-- DataTables -->
	<link rel="stylesheet" href="~/Core/lib/datatables/datatables.min.css" />
	<!-- Toastr -->
	<link rel="stylesheet" href="~/Core/lib/toastr/toastr.min.css" />
	<!-- Bootstrap Icons -->	
	<link rel="stylesheet" href="~/Core/lib/bootstrap-icons/bootstrap-icons.css" />

	<title>INCORP_domus</title>

	@await RenderSectionAsync("Styles", required: false)
